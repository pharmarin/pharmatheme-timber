{% extends "base.twig" %}

{% block content %}
    <div class="flex flex-row flex-wrap space-x-4">
        {% set current_letter = "" %}
        {% for term in terms %}
            {% set initiale = term.object.slug|first|upper %}
            <div class="flex items-end">
                {% if initiale is not same as current_letter %}
                    {% set current_letter = initiale %}
                    <h2 class="mr-2 text-3xl">{{ current_letter }}</h2>
                {% endif %}
                <a href="{{ term.link }}" class="mr-5 whitespace-nowrap">{{ term.object.name }}</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}