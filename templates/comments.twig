<section class="comment-box mt-10 p-4 relative"> 
    <div class="absolute h-full w-full rounded-2xl bg-gray-300 -m-5 transform -rotate-3"></div>
    <div class="absolute h-full w-full rounded-2xl bg-gradient-to-br from-blue-500 to-indigo-300 -m-5 transform -rotate-1"></div>
    <div class="comments relative">
        <h3 class="text-xl font-bold mb-1">Commentaires</h3>
        {% if post.comments|length > 0 %}
            {% for comment in post.comments %}
                {% include "comment-single.twig" with { comment } %}
            {% endfor %}
        {% else %}
            Aucun commentaire pour le moment
        {% endif %}
    </div>
    
    {% if post.comment_status == "closed" %}
        <p>Les commentaires sont désactivés pour cet article</p>
    {% else %}
        {% include "comment-form.twig" %}
    {% endif %}
</section>